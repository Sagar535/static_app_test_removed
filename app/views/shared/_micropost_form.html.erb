<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div>
		<%= f.text_area :content, placeholder: "Composer new micropost..." %>
	</div>
	<%= f.submit "Post", class: "btn btn-primary" %>
	<span class="picture" id="picture">
		<%= f.file_field :picture, accept: 'image/jpeg,image/png,image/gif' %>
	</span>
	<span id="error"></span>
<% end %>

<script>
	$("#micropost_picture").bind('change', function() {
		var size_in_KB = this.files[0].size/1024
		if (size_in_KB > 300) {
			$("#picture").append("<div class='alert alert-danger'>File size cannot be greater than 300KB</div>")
			// alert("File size too big")
		}
	})
</script>
