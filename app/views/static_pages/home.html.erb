<% if logged_in? %>
	<div class="row">
		<aside>
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="micropost_form">
				<%= render 'shared/stats' %>
			</section>
			<section class="micropost_form">
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="jumbotron center">
		<h1>Ruby on Rails Home page</h1>
		<p>Know more about ruby at <a href="#">rubyonrails.com</a></p>

		<%= link_to "Sign Up", signup_path , class: "btn btn-lg btn-primary" %>
	</div>

	<%= image_tag("kitten.jpg") %>
<%end%>
